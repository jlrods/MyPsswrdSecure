<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_string_value_element"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvPsswrdStength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Very Strong"
            android:textColor="@android:color/holo_green_dark"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgStringValue"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_account_black_48dp"
                android:layout_gravity="center_vertical" />
            <TextView
                android:id="@+id/tvStringValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="j_rodriguez@modularauto.ie1111111111111111111"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="5dp"
                android:gravity="left"
                android:layout_weight="1"
                android:layout_marginLeft="50dp">
                <TextView
                    android:id="@+id/tvStrValTimesTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/strVal_times_used"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/tvStringValue"
                    android:layout_alignParentRight="true" />
                <TextView
                    android:id="@+id/tvStrValTimesUsed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:layout_below="@+id/tvStrValTimesTag"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tvStrValDateTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/strVal_date_created"
                    android:layout_below="@+id/tvStringValue" />
                <TextView
                    android:id="@+id/tvStrValDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10-June-1983"
                    android:layout_toRightOf="@+id/tvStrValDateTag"
                    android:layout_below="@+id/tvStringValue"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>